<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Receve">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/Toolbar123"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E8E7E3"
        android:elevation="10dp"
        android:theme="@style/Theme.AppCompat.DayNight.DarkActionBar"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:popupTheme="@style/MenuStyle"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_profile"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tv_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Change Photo"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"

            android:hint="Username"
            android:paddingBottom="15dp"
            app:met_floatingLabel="normal" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/mail"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:hint="Reason for Hiring/Photograph request"
            android:paddingBottom="15dp"
            app:met_floatingLabel="normal" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/PayAmount"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Amount Willing to pay in Rupees"
                android:textSize="15dp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/amount"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:ems="10"
                android:gravity="center_vertical"
                tools:layout_editor_absoluteX="59dp"
                tools:layout_editor_absoluteY="473dp" />


        </LinearLayout>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/ContactDetails"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:hint="Additional Details"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            app:met_floatingLabel="normal" />

        <Button
            android:id="@+id/HireAccept"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Accept"
            android:textColor="#3C3C3C" />

        <Button
            android:id="@+id/Reject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Reject"
            android:textColor="#3C3C3C" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>